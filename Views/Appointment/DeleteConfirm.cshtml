@model hospital_project.Models.AppointmentDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this appointment?</h2>

<h2>@Model.patient_id @Model.appointment_date</h2>

<div class="container">
    <a href="/Appointment/list" class="button-cancel">Cancel</a>
    <form action="/Appointment/delete/@Model.appointment_id" method="POST">
        <input type="submit" value="Yes, Confirm Delete" class="button-delete"/>
    </form>
</div>

